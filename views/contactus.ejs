    <script>
        function sendMail() {
            let formData = {
                name: document.querySelector(".name").value,
                email: document.querySelector(".email").value,
                phone: document.querySelector(".phone").value,
                company: document.querySelector(".company").value,
                message: document.querySelector(".message").value
            };

            // Send the email to the admin
            emailjs.send("service_edjgn4n", "template_7uxrkzl", formData)
                .then(function () {
                    alert("Message sent to admin!");
                }, function (error) {
                    alert("Failed to send message to admin: " + JSON.stringify(error));
                });

            // Send an auto-reply to the user
            let autoReplyData = {
                user_name: formData.name, // Personalize the email with the user's name
                user_email: formData.email // Send the email to the user's email
            };

            // Send the auto-reply email to the user
            emailjs.send("service_edjgn4n", "template_dpiy7ho", {
                to_email: formData.email,  // Ensure this matches the dynamic field in the template
                user_name: formData.name
            })
                .then(function () {
                    alert("Auto-reply sent to user!");
                }, function (error) {
                    alert("Failed to send auto-reply: " + JSON.stringify(error));
                });

                console.log("Admin email data:", formData);
                console.log("User auto-reply data:", autoReplyData);
        }

        
    </script>




